@model ParamountRestaurant_Project_Part2.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}


<h3>
    <em>Review</em> your cart:
</h3>
<p class="button">
    @Html.ActionLink("Checkout >> ", "AddressAndPayment", "Checkout")
</p>
    <div id="update-message">
    </div>
    <table>
        <tr>
            <th>
                Item
            </th>
            <th>
                Price (each)
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>
        @foreach (var item in
                Model.CartItems)
        {
            <tr id="row-@item.RecordId">
                <td>
                    @Html.ActionLink(item.FoodItem.Name, "Details", "Store", new { id = item.FoodId }, null)
                </td>
                <td>
                    @item.FoodItem.Price
                </td>
                <td id="item-count-@item.RecordId">
                    @item.Count
                </td>
                <td>
                    <a href="#" class="RemoveLink" data-id="@item.RecordId"> Remove from cart </a>
                </td>
            </tr>
        }
        <tr>
            <td>
                Total
            </td>
            <td></td>
            <td></td>
            <td id="cart-total">
                @Model.CartTotal
            </td>
        </tr>
    </table>
